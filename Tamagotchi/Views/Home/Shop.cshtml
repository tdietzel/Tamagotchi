@model Tamagotchis.Models.ShopViewModel

<!DOCTYPE html>
<html>

  <head>
    <title>Create a Tamagotchi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <meta charset='utf-8'>
    <link rel="stylesheet" type="text/css" href="~/css/homeNew.css" />
  </head>

  <body>
    <div class="shop-layout">
      <h1>Food</h1>
      @foreach (var food in Model.TypesOfFood)
      {
        <div class="food">
          <p>@food.Key: @food.Value points</p>
          <form class="food-form" action="/shop/buyfood" method="post">
          <input type="hidden" name="foodId" value="@food.Key" />
          <button type="submit">Buy</button>
          </form>
        </div>
      }
      
      <h1>Toys</h1>
      @foreach (var toy in Model.TypesOfToy)
      {
        <div class="toy">
          <p>@toy.Key: @toy.Value points</p>
          <form action="/shop/buytoy" method="post">
            <input type="hidden" name="toyId" value="@toy.Key" />
            <button type="submit">Buy</button>
          </form>
        </div>
      }
      <h4><a href="/pets">Head to your pets</a></h4>
    </div>
  </body>
</html>