@model Tamagotchis.Models.ShopViewModel

<!DOCTYPE html>
<html>

  <head>
    <title>Create a Tamagotchi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <meta charset='utf-8'>
    <link rel="stylesheet" type="text/css" href="~/css/homeShop.css" />
  </head>

  <body>
    <div class="shop-layout">
      <div class="shop-style">
        <h1>Food</h1>
        @foreach (var food in Model.TypesOfFood)
        {
          double cost = Math.Round(food.Value / 2.0);
          <div class="food">
            <p><b>@food.Key:</b> @food.Value</p>
            <img id="heart" src="~/img/hearts.png" />
            <form class="food-form" action="/shop/buyfood" method="post">
            <input type="hidden" name="foodId" value="@food.Key" />
            <button type="submit">@cost <img id="coin" src="~/img/coin.png" /> </button>
            </form>
          </div>
        }
        
        <h1>Toys</h1>
        @foreach (var toy in Model.TypesOfToy)
        {
          double cost = Math.Round(toy.Value / 2.0);
          <div class="toy">
            <p><b>@toy.Key:</b> @toy.Value</p>
            <img id="lightning-bolt" src="~/img/lightning-bolt.png" />
            <form action="/shop/buytoy" method="post">
              <input type="hidden" name="toyId" value="@toy.Key" />
              <button type="submit">@cost <img id="coin" src="~/img/coin.png" /> </button>
            </form>
          </div>
        }
        <h4><a href="/pets">Head to your pets</a></h4>

        @* Update to display actual currency amount *@
        <div class="coins">
          <h3>100</h3>
          <img id="coin" src="~/img/coin.png" />
        </div>
      </div>
    </div>
  </body>
</html>